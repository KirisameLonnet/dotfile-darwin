#!/usr/bin/env sh

# ============================================================================
# yabai configuration for yabai 7.x
# ============================================================================
# 
# Note: Many options from earlier versions have been removed in yabai 7.x:
# - window_border, window_border_width, etc. → Use "borders" app instead
# - window_topmost → Removed
# - layer → Removed from rules
# - window_animation_easing → Removed (only duration remains)
#
# For window animations to work, Screen Recording permission is required.
# ============================================================================

# Scripting Addition (requires sudo configuration)
# See: https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)
# Uncomment if you have configured passwordless sudo for yabai:
# sudo yabai --load-sa
# yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# Global settings
yabai -m config                                 \
    mouse_follows_focus          off            \
    focus_follows_mouse          off            \
    window_origin_display        default        \
    window_placement             second_child   \
    window_shadow                on             \
    window_opacity               on             \
    window_opacity_duration      0.35           \
    active_window_opacity        1.0            \
    normal_window_opacity        0.85           \
    insert_feedback_color        0xff89b4fa     \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  8              \
    bottom_padding               8              \
    left_padding                 8              \
    right_padding                8              \
    window_gap                   8              \
    layout                       bsp            \
    mouse_modifier               alt            \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            swap

# Window animation (requires Screen Recording permission)
yabai -m config window_animation_duration    0.35

# Space-specific layouts
yabai -m config --space 1 layout bsp
yabai -m config --space 2 layout bsp
yabai -m config --space 3 layout bsp
yabai -m config --space 4 layout bsp

# ============================================================================
# Application Rules
# ============================================================================

# Development tools - prefer BSP layout, space 1
yabai -m rule --add app="^Code$" space=1
yabai -m rule --add app="^Visual Studio Code$" space=1
yabai -m rule --add app="^Xcode$" space=1
yabai -m rule --add app="^IntelliJ IDEA$" space=1
yabai -m rule --add app="^WebStorm$" space=1
yabai -m rule --add app="^PyCharm$" space=1
yabai -m rule --add app="^Alacritty$" manage=on

# Browsers
yabai -m rule --add app="^Safari$" manage=on
yabai -m rule --add app="^Google Chrome$" manage=on
yabai -m rule --add app="^Firefox$" manage=on
yabai -m rule --add app="^Arc$" manage=on

# Communication apps - space 4
yabai -m rule --add app="^Slack$" space=4
yabai -m rule --add app="^Discord$" space=4
yabai -m rule --add app="^Telegram$" space=4
yabai -m rule --add app="^Signal$" space=4
yabai -m rule --add app="^WhatsApp$" space=4

# Media and design - space 3
yabai -m rule --add app="^Adobe.*$" space=3 manage=on
yabai -m rule --add app="^Figma$" space=3 manage=on
yabai -m rule --add app="^Sketch$" space=3 manage=on
yabai -m rule --add app="^GIMP$" space=3 manage=on
yabai -m rule --add app="^Blender$" space=3 manage=on
yabai -m rule --add app="^VLC$" manage=off
yabai -m rule --add app="^QuickTime Player$" manage=off

# System utilities - float (not managed)
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Wally$" manage=off
yabai -m rule --add app="^Pika$" manage=off
yabai -m rule --add app="^balenaEtcher$" manage=off
yabai -m rule --add app="^Creative Cloud$" manage=off
yabai -m rule --add app="^Logi Options$" manage=off
yabai -m rule --add app="^PrintShop$" manage=off
yabai -m rule --add app="^BRAW Toolbox$" manage=off
yabai -m rule --add app="^Wireless Diagnostics$" manage=off
yabai -m rule --add app="^iWall$" manage=off

# Sticky utility windows
yabai -m rule --add app="^Digital Colormeter$" sticky=on manage=off
yabai -m rule --add app="^Disk Utility$" sticky=on manage=off
yabai -m rule --add app="^Activity Monitor$" sticky=on manage=off
yabai -m rule --add app="^Path Finder$" manage=off
yabai -m rule --add app="^TeamViewer$" sticky=off manage=off
yabai -m rule --add app="^Raycast$" sticky=on manage=off
yabai -m rule --add app="^Finder$" sticky=on manage=off
yabai -m rule --add app="^Alfred$" sticky=on manage=off
yabai -m rule --add app="^CleanMyMac$" sticky=on manage=off

# Finder dialog windows
yabai -m rule --add app="^Finder$" title="^Go to.*" manage=off sticky=on
yabai -m rule --add app="^Finder$" title="^Connect to.*" manage=off sticky=on
yabai -m rule --add app="^Finder$" title="^Copy$" manage=off sticky=on
yabai -m rule --add app="^Finder$" title="^Move$" manage=off sticky=on
yabai -m rule --add app="^Finder$" title="^Delete$" manage=off sticky=on
yabai -m rule --add app="^Finder$" title="^Info$" manage=off sticky=on
yabai -m rule --add app="^Finder$" title=".*Info$" manage=off sticky=on

# Float dialog and preference windows
yabai -m rule --add title="^Preferences" manage=off
yabai -m rule --add title="^Settings" manage=off

# ============================================================================
# Signals
# ============================================================================

# Optional: Focus change logging (for debugging)
# yabai -m signal --add event=window_focused action="echo 'Window focused'"

# Space change signal
yabai -m signal --add event=space_changed action="
  SPACE=\$(yabai -m query --spaces --space | jq '.index')
  echo \"Switched to space \$SPACE\"
"

echo "yabai configuration loaded successfully (yabai 7.x compatible)"
